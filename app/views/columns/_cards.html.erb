<% @columns.each do |c| %>
  <% if c.shared %>
    <div class="column column-block column-primary column-inverse column-shared" style="background-image: linear-gradient(rgba(1, 1, 1, 0.06), rgba(1, 1, 1, 0.35));">
      <div class="column-category shared"><h2><%= c.name %></h2></div>
      <div class="column-description">
        <p><%= c.description %></p>
        <div class="cards-box">
          <%= render 'cards/cards', current_column: c%>
        </div>
      </div>

      <img class="column-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
      <!-- <a class="card-link" href="#" ></a> -->
      <div id="delete-button">
        <% if policy(c).destroy? %>
          <%= link_to "", column_path(c), method: :delete, data: {:confirm => 'Are you sure?'}, class:"far fa-trash-alt" %>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="column column-block column-primary column-inverse column-not-shared" style="background-image: linear-gradient(rgba(1,1,1,0.8), rgba(1,1,1,0.8));">
      <div class="column-category not-shared"><h2><%= c.name %></h2></div>
      <div class="column-description">
        <p><%= c.description %></p>
        <div class="cards-box">
          <%= render 'cards/cards', current_column: c%>
        </div>
      </div>
      <img class="column-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
      <!-- <a class="card-link" href="#" ></a> -->
      <div id="delete-button">
        <% if policy(c).destroy? %>
          <%= link_to "", column_path(c), method: :delete, data: {:confirm => 'Are you sure?'}, class:"far fa-trash-alt" %>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>
